<%= form_with(model: breastfeeding, local: true) do |form| %>
  <% if breastfeeding.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(breastfeeding.errors.count, "error") %> prohibited this breastfeeding from being saved:</h2>

      <ul>
      <% breastfeeding.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :duration, 'Breastfeeding time' %>
    <%= form.text_field :duration, class:"form-control"%>
  </div>

  <div class="form-group">
    <%= form.label :quantity, 'cc Milk' %>
    <%= form.text_field :quantity, class:"form-control"%>
  </div>

  <div class="form-group">
    <%= form.label :date %>
    <%= form.datetime_field :date, class:"form-control"%>
  </div>

  <div class="form-group">
    <%= form.label :baby_id %>
    <%= form.select :baby_id, options_for_select(@babies)%>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
